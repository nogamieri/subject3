<div class="container">
<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<h1>Editing Book</h1>
		<% if @book.errors.any? %>
		  <div>
		  	<h2 style="color: red"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
		    <ul style="color: red">
		      <% @book.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		    </ul>
		  </div>
		<% end %>

		<%= form_for(@book) do |f| %>
			<div class="field row">
				<%= f.label :title %>
				<%= f.text_field :title, class: "form-control" %>
			</div>

			<div class="field row">
				<%= f.label :body, "Opinion" %>
				<%= f.text_area :body, class: "form-control" %>
			</div>

			<div class="actions row">
				<%= f.submit "Update Book", class: "btn btn-primary btn-block" %>
			</div>
		<% end %>
		<%= link_to "Show", book_path(@book), class: "book_#{@book.id}" %>
		<%= link_to "Back", books_path, class: "back" %>

	</div>
</div>
</div>